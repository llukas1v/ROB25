<?xml version="1.0"?>
<robot name="planar_arm">

  <!-- Base link -->
  <link name="base_link"/>

  <!-- First joint: revolute -->
  <joint name="rev_joint_0" type="revolute">
    <parent link="base_link"/>
    <child link="segment_1"/>
    <origin rpy="0 0 0" xyz="0 0 0.15"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" lower="-3.14" upper="3.14" velocity="10"/>
  </joint>

  <link name="segment_1"/>

  <!-- Fixed connection to first sphere -->
  <joint name="fix_joint_1" type="fixed">
    <parent link="segment_1"/>
    <child link="ball_1"/>
    <origin rpy="0 0 0" xyz="0 0 0.5"/>
  </joint>

  <link name="ball_1"/>

  <!-- Second revolute joint -->
  <joint name="rev_joint_1" type="revolute">
    <parent link="segment_1"/>
    <child link="segment_2"/>
    <origin rpy="0 0 0" xyz="0 0 0.5"/>
    <axis xyz="1 0 0"/>
    <limit effort="10" lower="-3.14" upper="3.14" velocity="10"/>
  </joint>

  <link name="segment_2"/>

  <!-- Third revolute joint -->
  <joint name="rev_joint_2" type="revolute">
    <parent link="segment_2"/>
    <child link="segment_3"/>
    <origin rpy="0 0 0" xyz="0 0 0.25"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" lower="-3.14" upper="3.14" velocity="10"/>
  </joint>

  <link name="segment_3"/>

  <!-- Fixed joint to second sphere -->
  <joint name="fix_joint_2" type="fixed">
    <parent link="segment_3"/>
    <child link="ball_2"/>
    <origin rpy="0 0 0" xyz="0 0 0.25"/>
  </joint>

  <link name="ball_2"/>

  <!-- Fourth revolute joint -->
  <joint name="rev_joint_3" type="revolute">
    <parent link="segment_3"/>
    <child link="segment_4"/>
    <origin rpy="0 0 0" xyz="0 0 0.25"/>
    <axis xyz="1 0 0"/>
    <limit effort="10" lower="-3.14" upper="3.14" velocity="10"/>
  </joint>

  <link name="segment_4"/>

  <!-- Fixed joint for end effector -->
  <joint name="fix_joint_3" type="fixed">
    <parent link="segment_4"/>
    <child link="end_tool"/>
    <origin rpy="0 0 0" xyz="0 0 0.25"/>
  </joint>

  <link name="end_tool"/>

</robot>
